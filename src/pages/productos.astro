---
import Layout from '../layouts/Layout.astro';
---


<Layout>
  <section class="py-16 bg-gray-100 min-h-screen">
    <div class="max-w-4xl mx-auto text-center px-4">
      <h1 class="text-4xl font-bold text-red-600 mb-12">Selecciona una categoría</h1>

      <div class="space-y-8">
        <!-- Snacks -->
        <a href="/snacks" class="block bg-white shadow-md rounded-xl overflow-hidden hover:shadow-xl transition group">
          <div class="flex flex-col md:flex-row items-center md:items-stretch">
            <img src="/image/snacks.png" alt="Snacks" class="w-full md:w-1/3 h-48 object-contain group-hover:scale-105 transition-transform duration-300" />
            <div class="p-6 flex-1 text-left">
              <h2 class="text-2xl font-semibold text-gray-800 group-hover:text-red-600">Snacks</h2>
              <p class="text-gray-600 mt-2 text-sm">Explora nuestra variedad de papas, galletas, nachos y más.</p>
            </div>
          </div>
        </a>

        <!-- Bebidas -->
        <a href="/bebidas" class="block bg-white shadow-md rounded-xl overflow-hidden hover:shadow-xl transition group">
          <div class="flex flex-col md:flex-row items-center md:items-stretch">
            <img src="/image/bebidas.png" alt="Bebidas" class="w-full md:w-1/3 h-48 object-contain group-hover:scale-105 transition-transform duration-300" />
            <div class="p-6 flex-1 text-left">
              <h2 class="text-2xl font-semibold text-gray-800 group-hover:text-red-600">Bebidas</h2>
              <p class="text-gray-600 mt-2 text-sm">Refrescos, jugos para todos los gustos.</p>
            </div>
          </div>
        </a>

        <!-- Dulces -->
        <a href="/dulces" class="block bg-white shadow-md rounded-xl overflow-hidden hover:shadow-xl transition group">
          <div class="flex flex-col md:flex-row items-center md:items-stretch">
            <img src="/image/dulce.png" alt="Dulces" class="w-full md:w-1/3 h-48 object-contain group-hover:scale-105 transition-transform duration-300" />
            <div class="p-6 flex-1 text-left">
              <h2 class="text-2xl font-semibold text-gray-800 group-hover:text-red-600">Dulces</h2>
              <p class="text-gray-600 mt-2 text-sm">Golosinas, chocolates, chicles y más para endulzar el día.</p>
            </div>
          </div>
        </a>
      </div>
    </div>
  </section>
</Layout>

